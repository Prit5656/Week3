@model Week3.Models.GetInTouch
@{
    ViewData["Title"] = "Contact Us";
}

<h1>@ViewData["Title"]</h1>
<fieldset>
    @using (Html.BeginForm())
    {
        <p>
            @Html.LabelFor(model => model.Name)

            @Html.EditorFor(model => model.Name)
        </p>
        <p>
            @Html.LabelFor(model => model.Email)

            @Html.EditorFor(model => model.Email)
        </p>
        <p>
            @Html.LabelFor(model => model.Contact)

            @Html.TextAreaFor(model => model.Contact)
        </p>
        <p>
            @Html.LabelFor(model => model.Message)

            @Html.TextAreaFor(model => model.Message)
        </p>

        <button type="submit">Send Message</button>
    }
</fieldset>
@if (Model != null)
{
    <h1>"Message sent"</h1>
    <h3>@Model.Title</h3>
    <h4> Contact Name: @Model.Name having Email-address: @Model.Email at @Model.Datecreated</h4>
    <h4>Contact Number: @Model.Contact</h4>
    <p>Message from Customer:@Model.Message  </p>
}

